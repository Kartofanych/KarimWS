<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.07"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="20dp"
            android:background="@drawable/edit_back"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            />
        <EditText
            android:layout_toRightOf="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search..."
            android:paddingLeft="10dp"
            android:background="@drawable/edit_back"
            />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/rel1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.07"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:id="@+id/f1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.8"
            android:layout_marginLeft="1dp"
            app:layout_constraintWidth_percent="0.33"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/back_for_search_black"
            android:text="Anime"
            />

        <TextView
            android:id="@+id/f2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            app:layout_constraintLeft_toRightOf="@+id/f1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.8"
            android:background="@drawable/edit_back"
            app:layout_constraintWidth_percent="0.33"
            android:text="Manga"
            />

        <TextView
            android:id="@+id/f3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:background="@drawable/edit_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/f2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintWidth_percent="0.33"
            android:text="Ranobe"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/s"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/search1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter a name in the input field"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/s"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>